<%= javascript_include_tag :application%>
<div class="row">
  <!-- Not implemented on tutorial -->
  <div class="col-md-4">
    <div style="height: 300px; width: 1000px; overflow-y: auto;">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Users</div>

        <!-- Table -->
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Username</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each_with_index do |user, index| %>
              <tr>
                <td><%= index +=1 %></td>
                <td><%= user.name %></td>
                <td>
                  <%= link_to "Add Friend", :action => "addfriend", :cid=>current_user.id, :uid=> user.id%>
                </td>
              </tr>
          <% end %>

          </tbody>
        </table>
      </div>

    </div>
    <div style="height: 300px; width: 1000px; overflow-y: auto;">
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Current Friends</div>

        <!-- Table -->
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Username</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @friends.each_with_index do |user, index| %>
              <tr>
                <td><%= index +=1 %></td>
                <% if current_user.id==user.friend_id %>
                  <td><%= User.find(user.friendx_id).name %></td>
                <% else %>
                  <td><%= User.find(user.friend_id).name %></td>
                <% end %>
                <td>
                  <%= link_to "Delete Friend", {:action => "deletefriend", :cid=>user.friend_id, :uid=> user.friendx_id}%>
                </td>
              </tr>
          <% end %>

          </tbody>
        </table>
      </div>

    </div>

  </div>

  <div class="col-md-4">

  </div>

</div>